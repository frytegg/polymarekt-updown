# =============================================================================
# Polymarket BTC Up/Down Trading Bot - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git (contains secrets)

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# Polygon RPC URL for live trading
# Default: https://polygon.drpc.org (public, rate-limited)
# Recommended: Use Alchemy, Infura, or QuickNode for production
RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Archive RPC URL for backtest (required for Chainlink historical data)
# Must support eth_call with block number parameter
# Recommended: Alchemy or Ankr archive nodes
ARCHIVE_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# WALLET & POLYMARKET
# =============================================================================

# Your wallet private key (WITHOUT 0x prefix)
# CRITICAL: Keep this secret! Never share or commit
# Note: Not required for paper trading mode
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Funder address (optional, for delegated signing)
# Leave empty if using same wallet for funding and signing
FUNDER_ADDRESS=

# Polymarket CLOB API host
# Default: https://clob.polymarket.com (production)
CLOB_HOST=https://clob.polymarket.com

# Polygon chain ID (137 = mainnet, 80001 = Mumbai testnet)
CHAIN_ID=137

# Signature type for Polymarket orders
# 0 = EOA, 1 = POLY_GNOSIS_SAFE, 2 = POLY_PROXY (default)
SIGNATURE_TYPE=2

# =============================================================================
# TRADING MODE
# =============================================================================

# Paper trading mode (simulate trades without executing)
# Set to 'true' to enable paper trading - NO REAL MONEY AT RISK
# Trades are logged to data/paper-trades/paper-trades-YYYY-MM-DD.json
PAPER_TRADING=true

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Manual strike price override (optional)
# Leave empty to auto-fetch from market
# ARB_STRIKE=105000

# Minimum edge to trade (decimal, 0.2 = 20%)
ARB_EDGE_MIN=0.2

# Stop trading X seconds before market resolution
ARB_STOP_BEFORE_END=30

# Order sizing (in USD)
ARB_MIN_ORDER_USD=1
ARB_MAX_ORDER_USD=2

# Position limits (in USD)
ARB_MAX_POSITION_USD=5
ARB_MAX_TOTAL_USD=100

# Maximum buy price (0-1, e.g., 0.95 = won't buy above 95 cents)
ARB_MAX_BUY_PRICE=0.99

# Slippage tolerance in basis points (200 = 2%)
ARB_SLIPPAGE_BPS=200

# Oracle adjustment: Binance to Chainlink price correction
# Chainlink is typically ~$104 lower than Binance (varies -50 to -150)
# Leave at -104 for default, system uses adaptive EMA when warmed up
ARB_ORACLE_ADJUSTMENT=-104

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
# Get real-time alerts for trades and market resolutions
#
# Setup:
# 1. Message @BotFather on Telegram, send /newbot, follow prompts
# 2. Copy the bot token (looks like: 123456789:ABCdefGHI...)
# 3. Message @userinfobot to get your chat ID
# 4. Start a chat with your bot (required before it can message you)

# Bot token from @BotFather
TELEGRAM_BOT_TOKEN=

# Your chat ID from @userinfobot
TELEGRAM_CHAT_ID=

# Enable/disable specific notification types (all default to true if token is set)
# Set to 'false' to disable specific notifications
TELEGRAM_NOTIFY_TRADES=true
TELEGRAM_NOTIFY_RESOLUTIONS=true
TELEGRAM_NOTIFY_SUMMARY=true
TELEGRAM_NOTIFY_ERRORS=true

# =============================================================================
# QUICK START - PAPER TRADING
# =============================================================================
# To run paper trading with Telegram alerts:
#
# 1. Copy this file to .env
# 2. Set PAPER_TRADING=true (already set above)
# 3. Add your Telegram bot token and chat ID
# 4. Run: npx ts-node index.ts
#
# You'll receive Telegram notifications for:
# - Each simulated trade (side, price, edge, fees)
# - Market resolutions (win/loss, P&L)
# - Periodic summaries (every 15 min)
# - Daily summary at midnight UTC
# - Any errors or warnings
